<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ccr.mapper.AdminLoginMapper">

    <sql id="BaseResult">
        select id, username, password, real_name, status, user_type
        from user
    </sql>

    <resultMap id="BaseResultMap" type="com.ccr.entity.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="real_name" property="realName" />
        <result column="status" property="status" />
        <result column="user_type" property="userType" />
        <association property="admin" column="id" javaType="admin" select="getAdminInfoByUserId"/>
    </resultMap>

    <select id="getAdminByUser" resultMap="BaseResultMap">
        <include refid="BaseResult"/>
        <where>
            <if test="username != null and username != ''">and username = #{username} </if>
            and user_type = 3 and is_deleted = 0
        </where>
    </select>

    <select id="getAdminInfoByUserId" resultType="Admin">
        select position from admin where user_id = #{id} and is_deleted = 0
    </select>

    <select id="getAdminByUsername" resultType="com.ccr.entity.User">
        <include refid="BaseResult"/>
        <where>
            <if test="username != null and username != ''">and username = #{username} </if>
            and user_type = 3 and is_deleted = 0
        </where>
    </select>

</mapper>